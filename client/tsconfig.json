{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "@types/*", "src/types/*"]
    },
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"],
  "lib": ["es2016", "dom"]
}
